<h1>Posts Listing page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <th><%= post.title %></th>
            <th><%= post.description %></th>
            <th> Placeholder</th>
             <td><%= link_to 'Show',  post_path(post)%></td>
             <td><%= link_to 'Edit', edit_post_path(post) %></td>
                <td><%= link_to 'Delete', post_path(post),data: { "turbo-method": :delete}%></td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <%= link_to "Create a new post", new_post_path %>
</p>


